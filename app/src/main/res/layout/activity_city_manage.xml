<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue">
    
    <RelativeLayout 
        android:id="@+id/top_bar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_blue">

       <LinearLayout
           android:id="@+id/backtoweather_but"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true">
            <Button
                android:layout_height="26dp"
                android:layout_width="40dp"
                android:background="@drawable/goback"
                />
           <View
               android:layout_width="3dp"
               android:layout_height="match_parent"
               android:background="@android:color/black"
               android:layout_margin="4dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="位置管理"
               android:textColor="@android:color/black"
               android:textSize="20sp"/>

        </LinearLayout>
        <Button 
            android:id="@+id/eidte_but"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="编辑"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/light_blue"/>
        
        <View 
			android:layout_width="0px"
			android:layout_height="0px"
			android:layout_below="@id/eidte_but"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/top_bar2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_blue"
        android:visibility="gone">
        
        <Button 
            android:id="@+id/commit_but"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="确定"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/light_blue"/>
        
        <Button 
            android:id="@+id/cancel_but"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="取消"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/light_blue"/>
        
        <View 
			android:layout_width="0px"
			android:layout_height="0px"
			android:layout_below="@id/commit_but"/>
        
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/city_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">
        
    </ListView>
	
	<View 
	    android:id="@+id/line_view"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_gravity="center_horizontal"
	    android:background="#000000"/>
	
    <ImageButton 
        android:id="@+id/add_but"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add2"
        android:scaleType="centerInside"
        android:background="@color/light_blue"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"/>
    
</LinearLayout>
