<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/gray">

		<Button
			android:id="@+id/backSetting_but"
			android:layout_alignParentLeft="true"
			android:layout_height="20dp"
			android:layout_width="40dp"
			android:background="@drawable/goback"
			android:layout_centerVertical="true"/>

		<View
			android:id="@+id/separate_view"
			android:layout_width="4px"
			android:layout_height="match_parent"
			android:background="@android:color/black"
			android:layout_marginBottom="15dp"
			android:layout_marginTop="15dp"
			android:layout_marginRight="6dp"
			android:layout_toRightOf="@id/backSetting_but"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="设置"
			android:textSize="21sp"
			android:layout_toRightOf="@id/separate_view"
			android:layout_centerVertical="true"/>

		<View
			android:layout_width="0px"
			android:layout_height="0px"
			android:layout_below="@id/backSetting_but"/>

	</RelativeLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后台更新"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
        <ToggleButton
	        android:id="@+id/toggleButton1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="ToggleButton" 
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="5dp"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A8A8A8"
        android:layout_margin="1dp"/>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/updata_freq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新频率设置"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        
        <SeekBar
	        android:id="@+id/seekBar1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_below="@id/updata_freq_text"
	        android:layout_marginRight="5dp"
			android:scrollbarStyle="outsideOverlay"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A8A8A8"
        android:layout_margin="1dp"/>
    
	<android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/tabstrip"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:gravity="center" />
        
    </android.support.v4.view.ViewPager>
    
</LinearLayout>
